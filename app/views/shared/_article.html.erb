<div class="article-container">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "トップ", root_path %>
    </li>
    <li class="breadcrumb-item">
      <% article.categories.each do |category| %>
        <span class="breadcrumb-category">
          <%= link_to category_path(category) do %>
            <%= category.name %>
          <% end %>
        </span>
      <% end %>
    </li>
  </ol>

  <h1><%= article.title %></h1>
  <div class="article-container__title-additional">
    <% article.tags.each do |tag| %>
      <%= link_to tag_path(tag) do %>
        <span class="badge badge-pill badge-secondary"><%= tag.name %></span>
      <% end %>
    <% end %>
  </div>
  <div class="article-container__title-additional">
    <span class="article-container__title-additional-item">Author:
      <a href="https://github.com/nishio-dens" target="_blank">@nishio-dens</a>
    </span>
    <span class="article-container__item-split">/</span>
    <span class="article-container__title-additional-item"><%= article.published_at&.strftime("%Y年%m月%d日") %>に投稿</span>
  </div>

  <div>
    <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">
      Tweet
    </a>
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    <a href="http://b.hatena.ne.jp/entry/" class="hatena-bookmark-button" data-hatena-bookmark-layout="basic-label-counter" data-hatena-bookmark-lang="ja" title="このエントリーをはてなブックマークに追加"><img src="https://b.st-hatena.com/images/entry-button/button-only@2x.png" alt="このエントリーをはてなブックマークに追加" width="20" height="20" style="border: none;" /></a><script type="text/javascript" src="https://b.st-hatena.com/js/bookmark_button.js" charset="utf-8" async="async"></script>
  </div>

  <div class="article-container__article">
    <%= @article.lead_html %>
    <%= @article.content_html %>
  </div>
</div>
